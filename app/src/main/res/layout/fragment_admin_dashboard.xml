<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edumanagelogo"
    tools:context=".ui.admin.AdminDashboardFragment">

    <TextView
        android:id="@+id/admin_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Admin Dashboard"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <GridLayout
        android:id="@+id/admin_dashboard_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="16dp"
        android:layout_marginTop="48dp">

        <FrameLayout
            android:id="@+id/frame_manage_users"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#800000"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_manage_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Manage Users"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_view_reports"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#800000"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_view_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="View Reports"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_settings"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#800000"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Settings"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_logout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#800000"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Log Out"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
        </FrameLayout>

    </GridLayout>

</FrameLayout>