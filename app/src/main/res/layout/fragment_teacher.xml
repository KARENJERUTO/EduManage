<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edumanagelogo"
    tools:context=".ui.teacher.TeacherFragment">

    <TextView
        android:id="@+id/teacher_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Teacher Dashboard"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <GridLayout
        android:id="@+id/teacher_dashboard_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="16dp"
        android:layout_marginTop="48dp">

        <FrameLayout
            android:id="@+id/frame_view_classes"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#4CAF50"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_view_classes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View Classes"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_manage_assignments"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#4CAF50"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_manage_assignments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Manage Assignments"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_attendance"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#4CAF50"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Attendance"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frame_logout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="#4CAF50"
            android:elevation="4dp">

            <TextView
                android:id="@+id/text_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Log Out"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </FrameLayout>

    </GridLayout>

</FrameLayout>